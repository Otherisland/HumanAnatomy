<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/back_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/titleBar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menuc_return"
                android:layout_width="28dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:background="@drawable/menu_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="@string/usercenter"
                android:textColor="@color/white"
                android:textSize="18dip" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/user_basicinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textSize="16dp"
                android:text="用户基本信息" />/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:divider="@drawable/divider"
            android:showDividers="middle">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/user_namex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="用户昵称"
                android:textSize="@dimen/infor_size" />

            <EditText
                android:id="@+id/user_name_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:text="哈哈哈"
                android:textColor="@color/black"
                android:textSize="@dimen/infor_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/user_sexx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="性别"
                android:textSize="@dimen/infor_size" />

            <EditText
                android:id="@+id/user_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:text="女"
                android:textColor="@color/black"
                android:textSize="@dimen/infor_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/user_identifyx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="身份"
                android:textSize="@dimen/infor_size" />

            <EditText
                android:id="@+id/user_identify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:text="学生"
                android:textColor="@color/black"
                android:textSize="@dimen/infor_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/user_birthx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="注册时间"
                android:textSize="@dimen/infor_size" />

            <TextView
                android:id="@+id/user_registerDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="20dp"
                android:text="2018-10-19 15:07:30"
                android:textSize="@dimen/infor_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">


            <Button
                android:id="@+id/button_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/titleBar"
                android:text="保存"
                android:textColor="@color/white" />
        </RelativeLayout>
        </LinearLayout>
</LinearLayout>
